{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "parserOptions.ecmaVersion": true
    }
  },
  "rules": {
    "no-console": 1,
    "strict": ["error", "global"],
    "curly": "warn",
    "no-unused-vars": "warn"
  },
  "parser": "babel-eslint"
}